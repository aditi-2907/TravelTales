    <script>
        function typeText(element, text, callback) {
          let index = 0;
          element.textContent = ""; // Reset text content before typing
          function type() {
            if (index < text.length) {
              element.textContent += text.charAt(index);
              index++;
              setTimeout(type, 35);
            } else {
              setTimeout(callback, 1); // Pause before next action
            }
          }
          type();
        }
    
        function eraseText(element, callback) {
          let text = element.textContent;
          let index = text.length;
          function erase() {
            if (index >= 0) {
              element.textContent = text.substring(0, index);
              index--;
              setTimeout(erase, 10);
            } else {
              element.style.visibility = 'hidden';
              setTimeout(callback, 1); // Pause before next action
            }
          }
          erase();
        }
    
        function startTyping() {
          const elements = [
            document.querySelector('.yd'),
            document.querySelector('.ys'),
            document.querySelector('.yp')
          ];
          
          function cycle(index) {
            if (index >= elements.length) {
              setTimeout(() => {
                let eraseIndex = 0;
                function eraseNext() {
                  if (eraseIndex < elements.length) {
                    eraseText(elements[eraseIndex], eraseNext);
                    eraseIndex++;
                  } else {
                    setTimeout(() => cycle(0), 1);
                  }
                }
                eraseNext();
              }, 1);
            } else {
              let element = elements[index];
              element.style.visibility = 'visible';
              typeText(element, element.dataset.text, () => cycle(index + 1));
            }
          }
          
          elements.forEach((element) => {
            element.dataset.text = element.textContent; // Store the original text
          });
          
          cycle(0);
        }
    
        startTyping();



        //this is for home 2
        const carousel = document.getElementById('carousel');
        let currentIndex = 0;
        const cards = document.querySelectorAll('.card');
        const totalCards = cards.length;
        const cardsToShow = 2;

        function showCards() {
            const cardWidth = window.innerWidth*0.25; // card width + margin
            const totalWidth = cardWidth * totalCards;
            const maxIndex = Math.ceil(totalCards / cardsToShow) - 1;
            carousel.style.transform = `translateX(-${currentIndex * cardWidth * cardsToShow}px)`;
            currentIndex = (currentIndex + 1) % (maxIndex + 1);
        }

        setInterval(showCards, 3000);

      </script>
