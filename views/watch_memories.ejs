<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Watch Memories</title>
    <style>
        .media-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .media-item {
            width: 300px;
        }
        img, video, audio {
            width: 100%;
            height: auto;
            cursor: pointer; /* Add cursor pointer to indicate it's clickable */
        }
    </style>
</head>
<body>
    <h1>Your Media Files</h1>
    <div class="media-container">
        <% if (mediaFiles.length > 0) { %>
            <% mediaFiles.forEach(file => { %>
                <% if (file.startsWith('data:image/')) { %>
                    <div class="media-item">
                        <a href="<%= file %>" download="image">
                            <img src="<%= file %>" alt="Image">
                        </a>
                    </div>
                <% } else if (file.startsWith('data:video/')) { %>
                    <div class="media-item">
                        <a href="<%= file %>" download="video.mp4">
                            <video controls>
                                <source src="<%= file %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </a>
                    </div>
                <% } else if (file.startsWith('data:audio/')) { %>
                    <div class="media-item">
                        <a href="<%= file %>" download="audio.mp3">
                            <audio controls>
                                <source src="<%= file %>" type="audio/mpeg">
                                Your browser does not support the audio element.
                            </audio>
                        </a>
                    </div>
                <% } else { %>
                    <p>Unsupported file format: <%= file %></p>
                <% } %>
            <% }); %>
        <% } else { %>
            <p>No media files available.</p>
        <% } %>
    </div>
</body>
</html>
